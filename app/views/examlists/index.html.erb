<p id="notice"><%= notice %></p>

<h1>Examlists</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Examination</th>
      <th>Mark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @examlists.each do |examlist| %>
      <tr>
        <td><%= Student.find(examlist.student_id).full_name %></td>
        <td><%= Discipline.find(Examination.find(examlist.examination_id).discipline_id).title %></td>
        <td><%= examlist.mark %></td>
        <td><%= link_to 'Show', examlist %></td>
        <td><%= link_to 'Edit', edit_examlist_path(examlist) %></td>
        <td><%= link_to 'Destroy', examlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

